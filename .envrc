export_alias() {
  local name=$1
  shift
  local alias_dir=$PWD/.direnv/aliases
  local target="$alias_dir/$name"
  local oldpath="$PATH"
  mkdir -p "$alias_dir"
  if ! [[ ":$PATH:" == *":$alias_dir:"* ]]; then
    PATH_add "$alias_dir"
  fi

  echo "#!/bin/sh" > "$target"
  echo "PATH=$oldpath" >> "$target"
  echo "$@" >> "$target"
  chmod +x "$target"
}


use flake

export_alias "build" "cmake -S $PWD -B $PWD/build && cmake --build $PWD/build"
export_alias "run" "gdb $PWD/build/squinchwerms"
export_alias "brun" "build && run"
